models.py

from django.db import models
from django.contrib.auth.models import User

class TeaProduct(models.Model):
    name = models.CharField(max_length=100, verbose_name="–ù–∞–∑–≤–∞–Ω–∏–µ —á–∞—è")
    description = models.TextField(verbose_name="–û–ø–∏—Å–∞–Ω–∏–µ")
    price = models.DecimalField(max_digits=8, decimal_places=2, verbose_name="–¶–µ–Ω–∞")
    image = models.ImageField(upload_to='teas/', blank=True, null=True, verbose_name="–ö–∞—Ä—Ç–∏–Ω–∫–∞")
    is_available = models.BooleanField(default=True, verbose_name="–í –Ω–∞–ª–∏—á–∏–∏")
    
    def __str__(self):
        return self.name

    class Meta:
        verbose_name = "–ß–∞–π–Ω—ã–π –ø—Ä–æ–¥—É–∫—Ç"
        verbose_name_plural = "–ß–∞–π–Ω—ã–µ –ø—Ä–æ–¥—É–∫—Ç—ã"

class Cart(models.Model):
    user = models.ForeignKey(User, on_delete=models.CASCADE, verbose_name="–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å")
    product = models.ForeignKey(TeaProduct, on_delete=models.CASCADE, verbose_name="–¢–æ–≤–∞—Ä")
    quantity = models.PositiveIntegerField(default=1, verbose_name="–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ")
    added_at = models.DateTimeField(auto_now_add=True, verbose_name="–î–∞—Ç–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è")
    
    def __str__(self):
        return f"{self.user.username} - {self.product.name}"
    
    def total_price(self):
        return self.product.price * self.quantity
    
    class Meta:
        verbose_name = "–ö–æ—Ä–∑–∏–Ω–∞"
        verbose_name_plural = "–ö–æ—Ä–∑–∏–Ω—ã"

urls.py

from django.urls import path
from django.contrib.auth import views as auth_views
from . import views

urlpatterns = [
    path('', views.tea_list, name='tea_list'),
    path('about/', views.about, name='about'),
    path('contacts/', views.contacts, name='contacts'),
    path('register/', views.register, name='register'),
    path('profile/', views.profile, name='profile'),
    path('login/', auth_views.LoginView.as_view(template_name='products/login.html'), name='login'),
    path('logout/', auth_views.LogoutView.as_view(), name='logout'),
    # –ü—É—Ç–∏ –¥–ª—è –∫–æ—Ä–∑–∏–Ω—ã
    path('cart/', views.cart_view, name='cart_view'),
    path('add-to-cart/<int:product_id>/', views.add_to_cart, name='add_to_cart'),
    path('remove-from-cart/<int:item_id>/', views.remove_from_cart, name='remove_from_cart'),
    path('update-cart/<int:item_id>/', views.update_cart, name='update_cart'),
]



views.py

from django.shortcuts import render, redirect, get_object_or_404
from django.contrib.auth import login, authenticate
from django.contrib.auth.forms import UserCreationForm
from django.contrib.auth.decorators import login_required
from django.contrib import messages
from .models import TeaProduct, Cart

def tea_list(request):
    teas = TeaProduct.objects.filter(is_available=True)
    return render(request, 'products/tea_list.html', {'teas': teas})

def about(request):
    return render(request, 'products/about.html')

def contacts(request):
    return render(request, 'products/contacts.html')

def register(request):
    if request.method == 'POST':
        form = UserCreationForm(request.POST)
        if form.is_valid():
            user = form.save()
            login(request, user)
            return redirect('tea_list')
    else:
        form = UserCreationForm()
    return render(request, 'products/register.html', {'form': form})

@login_required
def profile(request):
    return render(request, 'products/profile.html')

def add_to_cart(request, product_id):
    if not request.user.is_authenticated:
        messages.error(request, '–ù—É–∂–Ω–æ –≤–æ–π—Ç–∏ –≤ –∞–∫–∫–∞—É–Ω—Ç —á—Ç–æ–±—ã –¥–æ–±–∞–≤–∏—Ç—å –≤ –∫–æ—Ä–∑–∏–Ω—É!')
        return redirect('login')
    
    product = get_object_or_404(TeaProduct, id=product_id)
    cart_item, created = Cart.objects.get_or_create(
        user=request.user,
        product=product,
        defaults={'quantity': 1}
    )
    
    if not created:
        cart_item.quantity += 1
        cart_item.save()
        messages.success(request, f'–î–æ–±–∞–≤–ª–µ–Ω –µ—â—ë –æ–¥–∏–Ω "{product.name}" –≤ –∫–æ—Ä–∑–∏–Ω—É!')
    else:
        messages.success(request, f'"{product.name}" –¥–æ–±–∞–≤–ª–µ–Ω –≤ –∫–æ—Ä–∑–∏–Ω—É! üíñ')
    
    return redirect('tea_list')

def cart_view(request):
    if not request.user.is_authenticated:
        messages.error(request, '–í–æ–π–¥–∏—Ç–µ –≤ –∞–∫–∫–∞—É–Ω—Ç —á—Ç–æ–±—ã –ø–æ—Å–º–æ—Ç—Ä–µ—Ç—å –∫–æ—Ä–∑–∏–Ω—É')
        return redirect('login')
    
    cart_items = Cart.objects.filter(user=request.user)
    total = sum(item.total_price() for item in cart_items)
    
    return render(request, 'products/cart.html', {
        'cart_items': cart_items,
        'total': total
    })

def remove_from_cart(request, item_id):
    if not request.user.is_authenticated:
        return redirect('login')
    
    cart_item = get_object_or_404(Cart, id=item_id, user=request.user)
    product_name = cart_item.product.name
    cart_item.delete()
    messages.success(request, f'"{product_name}" —É–¥–∞–ª—ë–Ω –∏–∑ –∫–æ—Ä–∑–∏–Ω—ã')
    
    return redirect('cart_view')

def update_cart(request, item_id):
    if not request.user.is_authenticated:
        return redirect('login')
    
    cart_item = get_object_or_404(Cart, id=item_id, user=request.user)
    new_quantity = request.POST.get('quantity')
    
    if new_quantity and new_quantity.isdigit():
        cart_item.quantity = int(new_quantity)
        if cart_item.quantity > 0:
            cart_item.save()
            messages.success(request, '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –æ–±–Ω–æ–≤–ª–µ–Ω–æ!')
        else:
            cart_item.delete()
            messages.success(request, '–¢–æ–≤–∞—Ä —É–¥–∞–ª—ë–Ω –∏–∑ –∫–æ—Ä–∑–∏–Ω—ã')
    
    return redirect('cart_view')


